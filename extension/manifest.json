{
    "manifest_version": 3,
    "name": "Model Deviation Summarizer",
    "version": "1.0",
    "description": "Analyze conversation deviation and generate expert prompts.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://www.perplexity.ai/*",
        "https://claude.ai/*",
        "https://chat.deepseek.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Analyze Conversation",
        "default_icon": {
            "128": "ICON.png"
        }
    },
    "icons": {
        "128": "ICON.png"
    }
}